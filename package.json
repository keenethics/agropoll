{
  "name": "agromonitor",
  "private": true,
  "scripts": {
    "start": "meteor run"
  },
  "dependencies": {
    "babel-eslint": "^6.1.0",
    "babel-runtime": "^6.18.0",
    "bcrypt": "^1.0.1",
    "eslint": "^2.13.1",
    "eslint-plugin-react": "^4.3.0",
    "meteor-node-stubs": "~0.2.3",
    "react": "^15.4.1",
    "react-addons-pure-render-mixin": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.0",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "eslint": "^2.3.0",
    "eslint-plugin-meteor": "^3.0.1",
    "eslint-plugin-react": "^4.0.0",
    "eslint-plugin-standard": "^1.3.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "meteor"
    ],
    "rules": {
      "meteor/eventmap-params": [
        2,
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        0
      ],
      "consistent-return": 0,
      "new-cap": 0
    }
  }
}
